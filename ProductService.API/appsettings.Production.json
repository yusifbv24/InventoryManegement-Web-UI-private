{
    "AllowedHosts": "*",
    "ImageSettings": {
        "Path": "wwwroot/images/products",
        "MaxSizeInMB": 5,
        "BaseUrl": "https://inventory166.az/images/products"
    },
    "RabbitMQ": {
        "HostName": "rabbitmq"
    },
    "Jwt": {
        "ExpirationInMinutes": 60
    },
    "Services": {
        "ApprovalService": "http://api-gateway",
        "RouteService": "http://route-service"
    },
    "ApiKeys": {
        "API_KEY_F0R_SERVICE_DESK_2025_$$$": {
            "ServiceName": "ServiceDesk",
            "ServiceId": "servicedesk-001",
            "Permissions": [ "product.view" ]
        }
    },
    "Serilog": {
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Warning",
                "Microsoft.AspNetCore": "Warning",
                "Microsoft.EntityFrameworkCore": "Information",
                "Microsoft.AspNetCore.Routing.EndpointMiddleware": "Warning",
                "Microsoft.AspNetCore.Mvc": "Warning",
                "Microsoft.AspNetCore.SignalR": "Information",
                "System": "Warning",
                "RabbitMQ.Client": "Information"
            }
        },
        "WriteTo": [
            {
                "Name": "Seq",
                "Args": {
                    "serverUrl": "http://seq:80",
                    "restrictedToMinimumLevel": "Information",
                    "batchPostingLimit": 100,
                    "period": "00:00:02" // Batch logs every 2 seconds
                }
            }
        ],
        "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
        "Properties": {
            "ApplicationName": "Approval Service"
        }
    }
}