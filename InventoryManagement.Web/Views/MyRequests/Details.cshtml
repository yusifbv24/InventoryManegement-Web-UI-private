@model ApprovalRequestDto
@{
    ViewData["Title"] = "Request Details";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Request Details</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/Home/Dashboard">Dashboard</a></li>
        <li class="breadcrumb-item"><a href="/MyRequests">My Requests</a></li>
        <li class="breadcrumb-item active">Details</li>
    </ol>

    <div class="card mb-4 shadow">
        <div class="card-header">
            <i class="fas fa-info-circle me-1"></i>
            Request #@Model.Id
        </div>
        <div class="card-body">
            <partial name="~/Views/Approvals/_ApprovalDetails.cshtml" model="Model" />

            @if (Model.Status == "Rejected" && !string.IsNullOrEmpty(Model.RejectionReason))
            {
                <div class="alert alert-danger mt-3">
                    <h6>Rejection Reason:</h6>
                    <p class="mb-0">@Model.RejectionReason</p>
                </div>
            }

            @if (Model.Status == "Failed" && !string.IsNullOrEmpty(Model.RejectionReason))
            {
                <div class="alert alert-warning mt-3">
                    <h6>Execution Failed:</h6>
                    <p class="mb-0">@Model.RejectionReason</p>
                </div>
            }
        </div>
        <div class="card-footer">
            <a href="/MyRequests" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to My Requests
            </a>
            @if (Model.Status == "Pending")
            {
                <form asp-controller="MyRequests" asp-action="Cancel" asp-route-id="@Model.Id" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to cancel this request?')">
                        <i class="fas fa-times"></i> Cancel Request
                    </button>
                </form>
            }
        </div>
    </div>
</div>