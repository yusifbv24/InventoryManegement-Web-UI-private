@model ProductViewModel
@{
    ViewData["Title"] = "Create Product";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Create Product</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/Home/Dashboard">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-action="Index">Products</a></li>
        <li class="breadcrumb-item active">Create</li>
    </ol>

    <div class="row">
        <div class="col-lg-8">
            <div class="card mb-4 shadow">
                <div class="card-header">
                    <i class="fas fa-plus-circle me-1"></i>
                    New Product Information
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="InventoryCode" class="form-label"></label>
                                    <input asp-for="InventoryCode" class="form-control" />
                                    <span asp-validation-for="InventoryCode" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Vendor" class="form-label"></label>
                                    <input asp-for="Vendor" class="form-control" />
                                    <span asp-validation-for="Vendor" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Model" class="form-label"></label>
                                    <input asp-for="Model" class="form-control" />
                                    <span asp-validation-for="Model" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Worker" class="form-label"></label>
                                    <input asp-for="Worker" class="form-control" />
                                    <span asp-validation-for="Worker" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="CategoryId" class="form-label"></label>
                                    <select asp-for="CategoryId" asp-items="Model.Categories" class="form-select">
                                        <option value="">-- Select Category --</option>
                                    </select>
                                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="DepartmentId" class="form-label"></label>
                                    <select asp-for="DepartmentId" asp-items="Model.Departments" class="form-select">
                                        <option value="">-- Select Department --</option>
                                    </select>
                                    <span asp-validation-for="DepartmentId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ImageFile" class="form-label"></label>
                            <input asp-for="ImageFile" class="form-control" accept="image/*" onchange="previewImage(this, 'imagePreview')" />
                            <span asp-validation-for="ImageFile" class="text-danger"></span>
                            <img id="imagePreview" class="img-thumbnail mt-2" style="max-width: 200px; display: none;" />
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-check mb-3">
                                    <input asp-for="IsWorking" class="form-check-input" />
                                    <label asp-for="IsWorking" class="form-check-label"></label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-check mb-3">
                                    <input asp-for="IsActive" class="form-check-input" />
                                    <label asp-for="IsActive" class="form-check-label"></label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-check mb-3">
                                    <input asp-for="IsNewItem" class="form-check-input" />
                                    <label asp-for="IsNewItem" class="form-check-label"></label>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Create Product
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card mb-4 shadow">
                <div class="card-header">
                    <i class="fas fa-info-circle me-1"></i>
                    Quick Tips
                </div>
                <div class="card-body">
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <i class="fas fa-check text-success"></i>
                            Inventory codes must be unique and between 1-9999
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check text-success"></i>
                            Upload product images for better tracking
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check text-success"></i>
                            Mark products as "New Item" for recent acquisitions
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check text-success"></i>
                            Assign workers to track responsibility
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/ajaxHandler.js" asp-append-version="true"></script>
    <script>
        $(document).ready(function() {
            // Our submission guard flag - starts as false because nothing is submitting yet
            let isSubmitting = false;

            // Store the submit button and its original appearance
            const $submitBtn = $('button[type="submit"]');
            const originalButtonHtml = $submitBtn.html();

            // Initialize the form with AjaxHandler
            AjaxHandler.handleForm('form', {
                successMessage: 'Product created successfully!',
                successRedirect: '@Url.Action("Index")',
                redirectDelay: 1500,

                onBeforeSubmit: function(form) {
                    // THE CRITICAL CHECKPOINT: Check if we're already creating a product
                    // This happens before any validation, before any processing
                    // If someone clicked the button 5 times, only the first click gets past this point
                    if (isSubmitting) {
                        console.log('Product creation already in progress, blocking duplicate submission');
                        return false; // Stop right here - don't proceed with submission
                    }

                    // LOCK THE GATE: Mark that we're now in the process of creating a product
                    // Any subsequent clicks will be blocked by the check above
                    isSubmitting = true;
                    console.log('Product creation submission started');

                    // Let the submission proceed normally
                    // The AjaxHandler will handle validation and button state
                    return true;
                },

                onSuccess: function(response) {
                    // Check if this requires approval
                    // This can happen if a user without direct create permission tries to create
                    if (response.isApprovalRequest || response.approvalRequestId) {
                        showToast(
                            response.message || 'Product creation submitted for approval',
                            'info',
                            3000
                        );

                        // Still redirect - the product creation is pending approval
                        setTimeout(() => {
                            window.location.href = '@Url.Action("Index")';
                        }, 2000);

                        return false; // We're handling the redirect
                    }

                    // Normal success case - product was created directly
                    return true; // Let AjaxHandler handle the success flow
                },

                onError: function(errorMessage, response) {
                    // CRITICAL: Reset the flag when an error occurs
                    // This allows the user to fix their mistake and try again
                    isSubmitting = false;

                    // Restore the button so they can click it again
                    $submitBtn.prop('disabled', false).html(originalButtonHtml);

                    console.error('Product creation error:', errorMessage);
                    // The error will be shown by AjaxHandler
                }
            });
        });

        // Helper function for image preview
        // This is separate from the submission logic and doesn't need protection
        function previewImage(input, previewId) {
            if (input.files && input.files[0]) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    $('#' + previewId).attr('src', e.target.result).show();
                };
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
}