@model ProductViewModel
@{
    ViewData["Title"] = "Product Details";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Product Details</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/Home/Dashboard">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-action="Index">Products</a></li>
        <li class="breadcrumb-item active">Details</li>
    </ol>

    <div class="row">
        <div class="col-lg-8">
            <div class="card mb-4 shadow">
                <div class="card-header">
                    <div class="row">
                        <div class="col">
                            <i class="fas fa-info-circle me-1"></i>
                            Product Information
                        </div>
                        <div class="col text-end">
                            @if (User.HasPermission("product.update") || User.HasPermission("product.update.direct"))
                            {
                                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                            }
                            @if(User.HasPermission("route.create")|| User.HasPermission("route.create.direct"))
                            {
                                <a asp-controller="Routes" asp-action="Transfer" class="btn btn-primary btn-sm">
                                    <i class="fas fa-exchange-alt"></i> Transfer
                                </a>
                            }
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Fixed Image Column -->
                        <div class="col-md-5 text-center mb-3">
                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <div class="product-image-container">
                                    <img src="@Model.FullImageUrl"
                                         class="img-fluid rounded shadow-sm"
                                         style="max-height: 400px; width: auto; cursor: pointer;"
                                         alt="Product Image"
                                         onclick="showImageModal('@Model.FullImageUrl', 'Product Image')" />
                                </div>
                            }
                            else
                            {
                                <div class="no-image-placeholder p-5 bg-light rounded">
                                    <i class="fas fa-image fa-4x text-muted"></i>
                                    <p class="text-muted mt-2">No image available</p>
                                </div>
                            }
                        </div>

                        <!-- Fixed Details Column -->
                        <div class="col-md-7">
                            <div class="product-details">
                                <table class="table table-sm table-borderless">
                                    <tbody>
                                        <tr>
                                            <th width="35%" class="text-muted">Inventory Code:</th>
                                            <td><span class="badge bg-primary fs-6">@Model.InventoryCode</span></td>
                                        </tr>
                                        <tr>
                                            <th class="text-muted">Model:</th>
                                            <td class="fw-semibold">@(Model.Model ?? "N/A")</td>
                                        </tr>
                                        <tr>
                                            <th class="text-muted">Vendor:</th>
                                            <td>@(Model.Vendor ?? "N/A")</td>
                                        </tr>
                                        <tr>
                                            <th class="text-muted">Category:</th>
                                            <td>@(Model.CategoryName ?? "N/A")</td>
                                        </tr>
                                        <tr>
                                            <th class="text-muted">Department:</th>
                                            <td>@(Model.DepartmentName ?? "N/A")</td>
                                        </tr>
                                        <tr>
                                            <th class="text-muted">Assigned Worker:</th>
                                            <td>@(Model.Worker ?? "Not Assigned")</td>
                                        </tr>
                                        <tr>
                                            <th class="text-muted">Status:</th>
                                            <td>
                                                <div class="d-flex gap-2">
                                                    @if (Model.IsWorking)
                                                    {
                                                        <span class="badge bg-success">Working</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-danger">Not Working</span>
                                                    }
                                                    @if (Model.IsActive)
                                                    {
                                                        <span class="badge bg-primary">Active</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-secondary">Inactive</span>
                                                    }
                                                    @if (Model.IsNewItem)
                                                    {
                                                        <span class="badge bg-info">New Item</span>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>

                                @if (!string.IsNullOrEmpty(Model.Description))
                                {
                                    <div class="mt-3 p-3 bg-light rounded">
                                        <h6 class="text-muted mb-2">Description:</h6>
                                        <p class="mb-0">@Model.Description</p>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card mb-4 shadow">
                <div class="card-header">
                    <i class="fas fa-history me-1"></i>
                    Quick Actions
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-controller="Routes" asp-action="Timeline" asp-route-productId="@Model.Id" class="btn btn-outline-primary">
                            <i class="fas fa-route"></i> View Transfer History
                        </a>
                        @if (User.HasPermission("product.update") || User.HasPermission("product.update.direct"))
                        {
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-warning">
                                <i class="fas fa-edit"></i> Edit Product
                            </a>
                        }
                        @if(User.HasPermission("product.delete") || User.HasPermission("product.delete.direct"))
                        {
                            <button type="button" class="btn btn-outline-danger" onclick="confirmDelete(@Model.Id)">
                                <i class="fas fa-trash"></i> Delete Product
                            </button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this product?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form asp-action="Delete" asp-route-id="@Model.Id" method="post" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/app-config.js"></script>
    <script>
        function confirmDelete(productId) {
            if (!productId) {
                showToast('Invalid product ID', 'error');
                return;
            }

            // Show confirmation modal
            if (!confirm('Are you sure you want to delete this product?')) {
                return;
            }

            deleteProduct(productId);
        }

        function deleteProduct(productId) {
            // Show loading state
            const $deleteBtn = $('button[onclick*="confirmDelete"]');
            const originalHtml = $deleteBtn.html();
            $deleteBtn.prop('disabled', true)
                .html('<span class="spinner-border spinner-border-sm"></span> Deleting...');

            $.ajax({
                url: '/Products/Delete/' + productId,
                type: 'POST',
                headers: {
                    'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').first().val()
                },
                success: function(response) {
                    // Check if it's an approval request
                    if (response && response.approvalRequestId) {
                        showToast('Delete request submitted for approval', 'info');
                        setTimeout(() => window.location.href = '/Products', 2000);
                    } else {
                        showToast('Product deleted successfully', 'success');
                        setTimeout(() => window.location.href = '/Products', 1500);
                    }
                },
                error: function(xhr) {
                    // Reset button
                    $deleteBtn.prop('disabled', false).html(originalHtml);

                    let errorMsg = 'Failed to delete product';
                    if (xhr.status === 403) {
                        errorMsg = 'You do not have permission to delete products';
                    } else if (xhr.status === 404) {
                        errorMsg = 'Product not found';
                    } else if (xhr.responseJSON && xhr.responseJSON.message) {
                        errorMsg = xhr.responseJSON.message;
                    }

                    showToast(errorMsg, 'error');
                }
            });
        }
        function showImageModal(imageUrl, title) {
                // Use the global image modal from _Layout
                $('#globalModalImage').attr('src', imageUrl);
                $('#globalImageModal .modal-title').text(title || 'Image Preview');
                $('#globalImageModal').modal('show');
            }
    </script>
}