{
    "AllowedHosts": "*",
    "ApiGateway": {
        "BaseUrl": "http://api-gateway"
    },
    "Authentication": {
        "CookieExpirationMinutes": 60,
        "RequireHttps": true
    },
    "ConnectionStrings": {
        "Seq": "http://seq:80"
    },
    "Serilog": {
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Warning",
                "Microsoft.AspNetCore": "Warning",
                "Microsoft.EntityFrameworkCore": "Information",
                "Microsoft.AspNetCore.Routing.EndpointMiddleware": "Warning",
                "Microsoft.AspNetCore.Mvc": "Warning",
                "Microsoft.AspNetCore.SignalR": "Information",
                "System": "Warning",
                "RabbitMQ.Client": "Information"
            }
        },
        "WriteTo": [
            {
                "Name": "Seq",
                "Args": {
                    "serverUrl": "http://seq:80",
                    "restrictedToMinimumLevel": "Information",
                    "batchPostingLimit": 100,
                    "period": "00:00:02" // Batch logs every 2 seconds
                }
            }
        ],
        "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
        "Properties": {
            "ApplicationName": "Inventory Management Web"
        }
    }
}